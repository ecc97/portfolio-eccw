---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/shared/Navbar';
import ScrollProgress from '../components/scroll/ScrollProgress';
import Hero from '../components/sections/Hero';
import About from '../components/sections/About';
import Projects from '../components/sections/Projects';
import Skills from '../components/sections/Skills';
import Contact from '../components/sections/Contact';
import Footer from '../components/shared/Footer';
import { Toaster } from '../components/shared/Toast';

import '../styles/global.css';

const title = "Edwin Carmona | Desarrollador Frontend";
const description = "Portafolio de Edwin Carmona - Desarrollador Frontend especializado en React, Astro y tecnolog√≠as modernas. Transformo ideas en experiencias web interactivas.";
const url = "https://edwincarmona.com";
---

<Layout title={title} description={description} url={url}>
	<ScrollProgress client:load />
	<Navigation client:load />
	<Toaster client:load />
	<main>
		<Hero client:load />
		<About client:load />
		<Projects client:load />
		<Skills client:load />
		<Contact client:load />
	</main>
	<Footer client:load />
</Layout>
